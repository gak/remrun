server {
    listen 80 default;
    access_log off;

    location /static/ {
        alias /opt/web/static/;
    }

    location /media/ {
        alias /opt/web/media/;
    }

    location / {
		proxy_set_header        Host $http_host;
        proxy_pass              http://127.0.0.1:8000;
    }
}

